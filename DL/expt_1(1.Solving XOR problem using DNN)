import numpy as np
from keras.models import Sequential
from keras.layers import Dense

X, y = np.array([[0,0],[0,1],[1,0],[1,1]]), np.array([[0],[1],[1],[0]])

model = Sequential([Dense(8, activation='relu', input_shape=(2,)), Dense(1, activation='sigmoid')])
model.compile(loss='binary_crossentropy', optimizer='adam', metrics=['accuracy'])
model.fit(X, y, epochs=500, verbose=0)
print(f"Loss: {model.evaluate(X, y, verbose=0)[0]:.4f}, Accuracy: {model.evaluate(X, y, verbose=0)[1]*100:.2f}%")

for i, p in enumerate(model.predict(X)):
    print(f"{X[i]} -> {p[0]:.4f}")
